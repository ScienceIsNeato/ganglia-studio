[MASTER]
ignore=CVS,.git,__pycache__,venv,.venv,tests
jobs=0

[MESSAGES CONTROL]
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    C0302,  # too-many-lines
    R0801,  # duplicate-code
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access
    W0611,  # unused-import
    W0703,  # broad-except
    E1101,  # no-member (too many false positives with dynamic attrs)

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=8
max-locals=20
max-returns=6
max-branches=15
max-statements=60

[SIMILARITIES]
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

